<h3 class="h6 text-muted">Live comment..</h3>
<%= form_with model: [ @article, @article.comments.build ],
             class: "form-group bg-light rounded border m-3 p-3" do
             |form| %>
  <div class="form-group">              
    <%= form.label  :commenter, class: "small" %>             
    <%= form.text_field :commenter, class: "form-control form-control-sm" %>
  </div>
  <div class="form-group">
    <%= form.label :body, class: "small" %>
    <%= form.text_area :body, class: "form-control form-control-sm", rows: 3 %>
  </div>

  <div class="form-group">
  <%= form.label :status %><br>
  <%= form.select :status, ['public', 'private', 'archived'], selected: 'public' %>
</div>

  <div class="form-group">
    <%= form.submit type: "submit", class: "btn btn-success btn-sm" %>
  </div>
<% end %>